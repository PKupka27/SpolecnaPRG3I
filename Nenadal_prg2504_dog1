<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Generátor obrázků doga</title>
<style>
    #dog-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
    }
    #generate-button, #back-button {
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        margin-right: 10px;
    }
</style>
</head>
<body>
<h1>Generátor obrázků pejsků</h1>
<img id="dog-image" src="" alt="Obrázek pejska">
<button id="generate-button">Generovat obrázek doga</button>
<button id="back-button">Zpět</button>

<script>
    var lastDogImageUrl = null;

    function loadDogImage() {
        var apiUrl = 'https://dog.ceo/api/breeds/image/random';

        fetch(apiUrl)
            .then(response => response.json())
            .then(data => {
                var dogImageUrl = data.message;
                lastDogImageUrl = dogImageUrl;
                document.getElementById('dog-image').src = dogImageUrl;
            })
            .catch(error => console.error('Chyba při načítání obrázku:', error));
    }

    function loadLastDogImage() {
        if (lastDogImageUrl !== null) {
            document.getElementById('dog-image').src = lastDogImageUrl;
        }
    }

    document.getElementById('generate-button').addEventListener('click', loadDogImage);
    document.getElementById('back-button').addEventListener('click', loadLastDogImage);

    window.onload = loadDogImage;
</script>
</body>
</html>
